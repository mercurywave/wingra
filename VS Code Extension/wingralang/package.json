{
    "name": "wingralang",
    "publisher": "MercuryWave",
    "displayName": "Wingra Language",
    "description": "Langauge support for Wingra programming language",
    "version": "0.0.11",
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onLanguage:wingra",
        "onCommand:workbench.action.tasks.runTask"
    ],
    "main": "./out/src/extension",
    "configuration": {
        "type": "object",
        "title": "WingraLang configuration",
        "properties": {
            "languageServerExample.maxNumberOfProblems": {
                "type": "number",
                "default": 100,
                "description": "Controls the maximum number of problems produced by the server."
            },
            "languageServerExample.trace.server": "verbose"
        }
    },
    "contributes": {
        "languages": [
            {
                "id": "wingra",
                "aliases": [
                    "Wingra",
                    "wingra"
                ],
                "extensions": [
                    ".wng"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "wingraProj",
                "aliases": [
                    "WingraProj",
                    "wingra proj"
                ],
                "extensions": [
                    ".wingraProj"
                ]
            }
        ],
        "grammars": [
            {
                "language": "wingra",
                "scopeName": "source.wng",
                "path": "./syntaxes/wingra.tmLanguage.json"
            },
            {
                "language": "wingraProj",
                "scopeName": "source.wingraProj",
                "path": "./syntaxes/wingraProj.tmLanguage.json"
            }
        ],
        "taskDefinitions": [
            {
                "type": "wingraRunProvider"
            }
        ],
        "problemMatchers": [
            {
                "name": "wingra.run",
                "owner": "wingralang",
                "fileLocation": ["relative", "${workspaceRoot}"]
            }
        ],
        "commands": [
            {
				"command": "wingra.run",
				"title": "Run current folder",
				"category": "Wingra"
			}
        ]
    },
    "extensionDependencies": [],
    "scripts": {
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "devDependencies": {
        "@types/node": "^14.17.5",
        "@types/vscode": "^1.58.0",
        "tslint": "^6.1.0",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mercurywave/wingra"
    }
}
